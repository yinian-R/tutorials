<assembly>
    <id>releases</id>
    <formats>
        <!--指定打包格式-->
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <!--自定义的启动项目的脚本文件-->
            <directory>src/main/assembly/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <!--指定要包含的文件名称-->
                <include>*.*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <!--指定配置文件的位置、要包含的配置文件和配置文件输出目录-->
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
                <include>*.yml</include>
            </includes>
            <excludes>
                <exclude>application-dev.yml</exclude>
                <exclude>application-local.yml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!--指定jar包和输出位置-->
            <directory>target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--指定日志文件和输出位置-->
            <directory>src/main/resources</directory>
            <outputDirectory>logs</outputDirectory>
            <fileMode>0755</fileMode>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>